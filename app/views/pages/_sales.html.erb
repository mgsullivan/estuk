<table class="table table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th>Sold to</th>
			<th>Date Sold</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @sales.each do |sale| %>
			<tr>
				<td><%= link_to Book.find_by!(id:sale.book_id).name, pickup_path(sale.guid) %></td>
				<td><%= sale.buyer_email %></td>
				<td><%= time_ago_in_words(sale.created_at) %> ago</td>
			</tr>
		<% end %> 
	</tbody>
</table>